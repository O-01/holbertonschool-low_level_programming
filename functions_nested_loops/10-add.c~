#include "main.h"

/**
 * add - addition
 * @i: int1
 * @t: int2
 *
 *
 * Return: 0
 *
 */

int add(int i, int t)
{
	int g;

	g = i + t;

/**
 * TESTING PURPOSES
 *	if (g <= 9)
 *	{
 *		_putchar(g + 48);
 *	}
 *	else
 *	{
 *		_putchar((g / 10) + 48);
 *		_putchar((g % 10) + 48);
 *	}
 */
	return (g);
}
