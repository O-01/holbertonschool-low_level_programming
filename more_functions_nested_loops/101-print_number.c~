#include "main.h"

/**
 * print_number - prints integer
 * @n: given integer
 *
 * Return: void function
 */

void print_number(int n)
{
	if (n < 0)
		_putchar('-');

	if (n > 999)
		_putchar((n / 100) + '0');

	if (n > 99)
		_putchar((n % 100) + '0');

	if (n > 9)
		_putchar((n / 10) + '0');

	_putchar((n % 10) + '0');
}
